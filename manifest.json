{
  "manifest_version": 2,
  "name": "Leapp Browser Extension",
  "version": "0.1.0",
  "description": "Leapp Multi AWS Console Browser Extension",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "background": {
    "scripts": [ "background.js" ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Leapp Browser Extension",
    "default_popup": "popup.html"
  },
  "permissions": [
    "contextualIdentities",
    "contextMenus",
    "nativeMessaging",
    "tabs",
    "cookies",
    "storage",
    "https://*/*",
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "webNavigation",
    "<all_urls>",
    "background",
    "history"
  ],
  "content_scripts": [
    {
      "all_frames": true,
      "matches": [ "<all_urls>" ],
      "run_at": "document_start",
      "js": [ "contentScript.js" ]
    }
  ]
}
